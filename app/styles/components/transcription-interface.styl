.transcription-interface
    background-color: #3a3a3a
    background-image: url('/images/transcribe-bg.png')
    background-repeat: repeat
    flex: 1
    position: relative

    > .svg
        bottom: 0
        left: 0
        position: absolute
        right: 0
        top: 0

    > .overlay
        bottom: 0
        left: 0
        position: absolute
        right: 0
        top: 0
        display: flex
        align-items: center
        justify-content: center
